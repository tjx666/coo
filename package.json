        "@types/yargs": "^13.0.4",
        "@typescript-eslint/eslint-plugin": "^2.12.0",
        "@typescript-eslint/parser": "^2.12.0",
        "autoprefixer": "^9.7.3",
        "babel-loader": "^8.0.6",
        "circular-dependency-plugin": "^5.2.0",
        "clean-webpack-plugin": "^3.0.0",
        "concurrently": "^5.0.2",
