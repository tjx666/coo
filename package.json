{
    "name": "coo",
    "version": "1.0.0",
    "description": "coo is a cross-platform chat application",
    "main": "./out/main.js",
    "repository": "git@github.com:tjx666/coo.git",
    "author": "YuTengjing",
    "license": "MIT",
    "private": true,
    "scripts": {
        "start": "concurrently -kill-others-on-fail npm:start-renderer npm:start-main",
        "start-main": "wait-on http-get://localhost:1027/ && wait-on ./out/index.js && nodemon ./out/index.js",
        "start-renderer": "cross-env NODE_ENV=development ts-node --files -P ./scripts/tsconfig.json ./scripts/devServer",
        "compile": "rimraf -rf ./out && cross-env NODE_ENV=development tsc -p ./src/main",
        "build": "cross-env NODE_ENV=production ts-node --files -P ./scripts/tsconfig.json ./scripts/build",
        "test": "echo 'skip tests...'",
        "reinstall": "rimraf -rf ./node_modules && yarn"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": [
            "eslint -c .eslintrc"
        ],
        "*.{css,less,scss}": [
            "stylelint --config .stylelintrc.json"
        ],
        "*.{js,jsx,ts,tsx,json,css,scss,md}": [
            "prettier --write",
            "git add"
        ]
    },
    "dependencies": {
        "chalk": "^3.0.0",
        "electron": "^7.1.7",
        "lodash": "^4.17.15",
        "log-symbols": "^3.0.0",
        "react": "^16.12.0",
        "react-dom": "^16.12.0",
        "react-router": "^5.1.2",
        "react-router-dom": "^5.1.2",
        "yargs": "^15.0.2"
    },
